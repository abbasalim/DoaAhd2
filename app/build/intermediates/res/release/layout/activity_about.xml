<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/abt_side" />

    <TextView
        android:id="@+id/abt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:text="مَتی تَرَانا و نَراک ..."
        android:background="#28c2ba"
        android:textColor="#fff"
        android:gravity="right"
        android:padding="7dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
<!-- http://www.farhangnews.ir/content/72934 -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignTop="@+id/abt_abt"
        android:layout_toRightOf="@+id/imageView1"
        android:background="#28c2ba"
        />

    <ImageView
        android:id="@+id/abt_abt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:background="#28c2ba"
        android:src="@drawable/abt_abt" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/abt_title"
        android:layout_alignParentRight="true"
        android:paddingBottom="7dp"
        android:layout_below="@+id/abt_title"
        android:background="#28c2ba" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             >
            <TextView
        android:id="@+id/abt_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/abt_txt"
         android:gravity="right"
        
        android:padding="7dp"
        android:textColor="#fff"
       android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

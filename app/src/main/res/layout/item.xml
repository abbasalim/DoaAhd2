<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:alpha="0.7"
    app:cardUseCompatPadding="true">

    <RelativeLayout
    android:id="@+id/item_rl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/itm_arabi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/itm_img"
        android:gravity="right"
        android:text="اَللّهُمَّ " />

    <TextView
        android:id="@+id/itm_farsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/itm_arabi"
        android:layout_below="@+id/itm_arabi"
        android:gravity="right"
        android:text="خدايا اى پروردگار نور بزرگ و پروردگار كرسى بلند و پروردگار درياى"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#ff59b4a5" />

    <ImageView
        android:id="@+id/itm_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/itm_farsi"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="-20dp"
        android:src="@drawable/slim_day" />

        <!--    <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#FFE0D9CF"
                android:layout_below="@+id/itm_farsi"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#FFE0D9CF"
                android:layout_below="@+id/itm_farsi"/>-->

</RelativeLayout>
</android.support.v7.widget.CardView>